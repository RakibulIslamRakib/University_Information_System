@model Depertment


<link rel="stylesheet" href="~/css/details.css" />

@{
    <div class="container">

    <h3 style="text-align:center">Department : @(Model.DeptName)</h3>


<ul class="detailsMenu">
<li id="subject" ><a href="#" type="button" onclick="clickAction('subject')">Subjects</a> </li>
<li id="student"><a href="#" type="button" onclick="clickAction('student')">Students</a> </li>
<li id="teacher"><a href="#" type="button" onclick="clickAction('teacher')">Teachers</a> </li>
</ul>


<div class="detailsUl" id="subjectDiv">
<h2 style="margin-top:40px;">Subjects of @(Model.DeptName) Department:</h2>
            <a asp-controller="Depertment" asp-action="AddSubjectToTheDepertment"
           asp-route-id=@Model.id> Add Subject </a>
  
<hr>


@foreach (var subject in Model.Subjects)
{
<div class="grid-containerList">
               <p>    Name :
<a class="item1" asp-controller="Subject" asp-action="DetailsSubject"
asp-route-id=@subject.id>
 @(subject.SubjectName)
                        </a>
                    </p>
                    <input type="button" class="item2 removeBtn"
value="Delete"
onclick="location.href='@Url.Action("DeleteSubjectFromDept", "Depertment",
new { @subjectId = subject.id, @deptId = Model.id})'" />                                   
                                                                            
</div>
}

</div>



<div class="detailsUl" id="teacherDiv">
<h2 style="margin-top:40px;">Teachers of @(Model.DeptName) Department:</h2>

<hr>


@foreach (var teacher in Model.Teachers)
{
<div class="grid-containerList">
                    <p>        Name:
<a class="item1" asp-controller="Teacher" asp-action="DetailsTeacher"
asp-route-id=@teacher.Id>
 @(teacher.FirstName) @(teacher.LastName)
                        </a>
                    </p>
                    <div class="item2"></div>
</div>
}
</div>



<div class="detailsUl" id="studentDiv">
<h2 style="margin-top:40px;">Students of @(Model.DeptName) Department:</h2>



<hr>
@foreach (var student in Model.Students)
{
<div class="grid-containerList">
                    <p>   Name :
<a class="item1" asp-controller="Student" asp-action="DetailsStudent" 
asp-route-id=@student.id>
 @(student.FirstName) @(student.LastName)
</a>
                    </p>
                    <input type="button" class="item2 removeBtn"
value="Delete"
onclick="location.href='@Url.Action("DeleteStudentFromDept", "Depertment", 
new { @studentId = student.id, @deptId = Model.id})'" />
</div>
}
</div>



</div> 

        }
        

 <script>

    function clickAction(paramStr) {


    var subject = document.getElementById("subject");
    var student = document.getElementById("student");
    var teacher = document.getElementById("teacher");

    var subjectDiv = document.getElementById("subjectDiv");
    var studentDiv = document.getElementById("studentDiv");
    var teacherDiv = document.getElementById("teacherDiv");


    if(paramStr === "subject"){

        subject.style.backgroundColor = "#95B9C7";
            student.style.backgroundColor = "whitesmoke";
            teacher.style.backgroundColor = "whitesmoke";

        studentDiv.style.display = "none";
        teacherDiv.style.display = "none";
        subjectDiv.style.display = "block";

    }
    else if (paramStr === "student") {
        student.style.backgroundColor = "#95B9C7";
            subject.style.backgroundColor = "whitesmoke";
            teacher.style.backgroundColor = "whitesmoke";

        studentDiv.style.display = "block";
        teacherDiv.style.display = "none";
        subjectDiv.style.display = "none";

    }

   else {
        teacher.style.backgroundColor = "#95B9C7";
            student.style.backgroundColor = "whitesmoke";
            subject.style.backgroundColor = "whitesmoke";

        studentDiv.style.display = "none";
        teacherDiv.style.display = "block";
        subjectDiv.style.display = "none";

    }


};


    window.addEventListener('DOMContentLoaded', (event) => {
        clickAction("subject");
    });

            </script>
        
