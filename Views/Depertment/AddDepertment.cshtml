@model University_Information_System.Models.Depertment

<link rel="stylesheet" href="~/css/addItems.css" />

@{
<div class="container addIteme">
    <h3 style="text-align:center">Add new Depertment</h3>
    <form asp-controller = "Depertment" asp-action="AddDepertment">
            <input type="hidden" asp-for="CreatedBy" value="@ViewData["createdBy"]">

        <label for="fname">Depertment Name</label>
        <input type="text"  asp-for="DeptName" placeholder="depertment name..">
            <span class="errorMessage" asp-validation-for="DeptName"></span>
 
        <label for="subject">Descryption</label>
            <textarea id="subject" asp-for="Descryption" placeholder="Write something.." style="height:200px"></textarea>
            <span class="errorMessage" asp-validation-for="Descryption"></span>
            <input type="submit" value="Submit">
    </form>
</div>
             
}