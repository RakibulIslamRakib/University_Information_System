@model List<Subject>

<link rel="stylesheet" href="~/css/projects.css"/>
<link rel="stylesheet" href="~/css/contact.css" />

@{
    <div class="container">
 
        <h3 style="text-align:center">Enroll: </h3>
        <form asp-controller="Student" adp-rout-id=@( TempData["StudentId"]) asp-action="EnroleSubject">
        <label for="subjectId"> Subjects</label>
        <select name="subjectId">
                @{
                    if (Model.Count == 0)
                    {
                        <option class="selectItem" value="">None</option>
                    }
                }

        @foreach (var subject in Model){
                    <option class="selectItem" value=@(subject.id)>@(subject.SubjectName)</option>
           }
        </select>
            @{
                if (Model.Count == 0)
                {
                    <input type="submit" disabled value="Submit">
                }
                else
                {
                    <input type="submit" value="Submit">

                }
            }
        </form>
    </div>
             
}