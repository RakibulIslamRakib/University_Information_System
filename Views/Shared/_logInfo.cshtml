
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

 @if(_signInManager.IsSignedIn(User)){
    <li class="dropdown">
        <a  href="">@User.FindFirst("UserFirstName").Value</a>
        <ul class="dropdown-content" >
            <li> <a asp-controller="User" asp-action="Profile" 
                asp-route-userId="@User.FindFirst("UserId").Value">@User.FindFirst("UserFirstName").Value</a></li>
            <li > <a  asp-controller="Account" asp-action="Logout">Logout</a></li>
            <li > <a  asp-controller="Account" asp-action="ChangePassword">Change Password</a></li>
        </ul>
    </li>
 }  
 else{
          <li id="signup"> <a onclick="navAction('signup')" asp-controller="Account" 
              asp-route-returnUrl = "@Context.Request.Path" asp-action="Login" >Login</a></li>
         <li id="Login"> <a onclick="navAction('teachers')" asp-controller="Account" 
             asp-action="SignUp">Sign Up</a></li>

 }